@model Ecom_LittleHugs.Models.Customer
@{
    ViewData["Title"] = "Customer Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-3">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h4 class="text-center mb-4">Customer Profile</h4>
            <form method="post">
                <input type="text" name="customer_name" class="form-control mb-3" placeholder="Enter Your Name" value="@Model.customer_name" />
                <input type="text" name="customer_phone" class="form-control mb-3" placeholder="Enter Your Phone" value="@Model.customer_phone" />
                <input type="email" name="customer_email" class="form-control mb-3" placeholder="Enter Your Email" value="@Model.customer_email" />
                <input type="password" name="customer_password" class="form-control mb-3" placeholder="Enter Your Password" value="@Model.customer_password" />
                <input type="text" name="customer_country" class="form-control mb-3" placeholder="Enter Your Country" value="@Model.customer_country" />
                <input type="text" name="customer_city" class="form-control mb-3" placeholder="Enter Your City" value="@Model.customer_city" />
                <input type="text" name="customer_address" class="form-control mb-3" placeholder="Enter Your Address" value="@Model.customer_address" />
                <button type="submit" class="btn btn-primary w-100">Update Profile</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
