@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
    <link rel="stylesheet" href="~/website/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/website/css/style.css">
    <style>
        body {
            background: url('@Url.Content("~/website/images/backgrounds/login-bg.jpg")') no-repeat center center fixed;
            height: 100vh;
            margin: 0;
            font-family: "Poppins", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #ffe6f0, #f5e6ff);
        }

        .form-box {
            max-width: 400px;
            width: 100%;
            background: #fff;
            border: 2px solid #f8c6d8;
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 8px 25px rgba(255, 182, 193, 0.3);
        }

        h3 {
            color: #cc6699;
            font-weight: 600;
        }

        label {
            font-weight: 500;
            color: #555;
        }

        .form-control {
            border-radius: 12px;
            border: 1px solid #f3b8c7;
        }

        .btn-primary {
            background-color: #f48fb1;
            border: none;
            border-radius: 12px;
            padding: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #ec407a;
            }

        .form-footer {
            margin-top: 1rem;
            text-align: center;
        }

            .form-footer a {
                color: #cc6699;
                font-weight: 600;
                text-decoration: none;
            }

                .form-footer a:hover {
                    color: #ec407a;
                }
    </style>
</head>
<body>
    <div class="form-box">
        <h3 class="text-center mb-4">Sign In</h3>
        <form  method="post">
            <div class="form-group">
                <label for="login-username">Username or Email</label>
                <input type="text" id="login-username" name="customerEmail" class="form-control" placeholder="Enter username or email" required>
            </div>
            <div class="form-group mt-3">
                <label for="login-password">Password</label>
                <input type="password" id="login-password" name="customerPassword" class="form-control" placeholder="Enter password" required>
            </div>
            <div class="form-footer mt-4">
                <button type="submit" class="btn btn-primary w-100">Sign In</button>
                <p class="mt-3">Don't have an account? <a href="@Url.Action("CustomerRegistration", "Customer")">Sign Up</a>
                    <h5 class="text-danger text-center mt-3">
                        @ViewBag.message
                    </h5></p>
            </div>
        </form>
    </div>

    <script src="~/website/js/jquery.min.js"></script>
    <script src="~/website/js/bootstrap.bundle.min.js"></script>
</body>
</html>
