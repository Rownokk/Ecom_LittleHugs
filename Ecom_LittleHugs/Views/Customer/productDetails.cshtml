@{
    ViewData["Title"] = "productDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Product

<div class="container mt-5" style="background: #fff0f5; border-radius: 30px; padding: 30px; box-shadow: 0 8px 25px rgba(0,0,0,0.08);">
    <h2 class="text-center mb-4" style="font-family: 'Baloo 2', cursive; color: #ff69b4;">Product Details</h2>
    <div class="row align-items-center">
        <div class="col-md-5 text-center">
            <img src="@(Url.Content("~/product_images/" + Model.product_image))"
                 class="img-fluid rounded shadow-sm" style="max-height: 500px;" />
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <h3 style="font-family: 'Baloo 2', cursive; color: #ff1493;">@Model.product_name</h3>
            <h4 style="color: #ff69b4; font-weight: 600;">Price: <span style="font-size: 24px;">$@Model.product_price</span></h4>
            <p style="font-size: 16px; line-height: 1.6; color: #444;">@Model.product_description</p>

            <div class="mt-4">
                <a class="btn btn-gradient btn-warning me-2">Add to Cart</a>
                <a class="btn btn-gradient btn-primary">Buy Now</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #fff0f5; /* soft pink background */
    }

    .btn-gradient {
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 50px;
        border: none;
        box-shadow: 0 5px 15px rgba(255,105,180,0.3);
        transition: 0.3s;
        font-family: 'Poppins', sans-serif;
        color: #fff !important;
    }

    .btn-warning.btn-gradient {
        background: linear-gradient(45deg, #ff69b4, #ff85c1);
    }

        .btn-warning.btn-gradient:hover {
            background: linear-gradient(45deg, #ff85c1, #ffb6c1);
            transform: translateY(-2px);
        }

    .btn-primary.btn-gradient {
        background: linear-gradient(45deg, #ffb6c1, #ffc0cb);
    }

        .btn-primary.btn-gradient:hover {
            background: linear-gradient(45deg, #ffc0cb, #ffd6e8);
            transform: translateY(-2px);
        }

    h2, h3, h4, p {
        font-family: 'Baloo 2', cursive;
    }

    img.rounded {
        border-radius: 20px;
        transition: transform 0.3s;
    }

        img.rounded:hover {
            transform: scale(1.05);
        }
</style>
