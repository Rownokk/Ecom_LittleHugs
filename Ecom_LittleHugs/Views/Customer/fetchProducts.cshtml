@model List<Product>
<style>
    .product {
        width: 220px;
        height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: stretch;
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px;
        box-sizing: border-box;
    }

    .product-media {
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        margin-bottom: 10px;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>

@foreach (var pro in Model)
{
    <div class="product">
        <figure class="product-media">
            <span class="product-label label-top">Top</span>
            <a href="@Url.Action("productDetails", "Customer",new{id=pro.product_id})">
                <img src="@("~/product_images/" + pro.product_image)" alt="Product image" class="product-image"
                     asp-append-version="true" height="200px" />
            </a>

            <div class="product-action-vertical">
                <a href="#" class="btn-product-icon btn-wishlist" title="Add to Wishlist"><span>add to wishlist</span></a>
            </div>

            <div class="product-action">
                <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
            </div>
        </figure>

        <div class="product-body">
            <div class="product-cat">
                <a href="#">Shooter</a>
            </div>
            <h3 class="product-title">
                <a href="@Url.Action("productDetails", "Customer", new { id = pro.product_id })">
                    @pro.product_name
                </a>
            </h3>
            <div class="product-price">
                @pro.product_price
            </div>
        </div>
    </div>
}
