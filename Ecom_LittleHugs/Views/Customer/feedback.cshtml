@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="text-center mb-5" style="font-family: 'Segoe UI', sans-serif; color: #FF6F61;">
        Get In Touch With Us
    </h2>

    <div class="row g-4">
        <!-- Feedback Form -->
        <div class="col-lg-6">
            <div class="card shadow-sm rounded-4 p-4" style="border: none; background: #fff8f2;">
                <h4 class="mb-4 text-center" style="color: #FF6F61;">Send Us Your Message</h4>
                <form method="post">
                    <div class="mb-3">
                        <input type="text" name="user_name" class="form-control rounded-pill py-2" placeholder="Enter Your Full Name" required>
                    </div>
                    <div class="mb-3">
                        <textarea name="user_message" class="form-control rounded-4 py-2" rows="5" placeholder="Enter Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-warning w-100 rounded-pill fw-bold shadow-sm">Submit</button>
                </form>
            </div>
        </div>

        <!-- AUST Map -->
        <div class="col-lg-6">
            <div class="card shadow-sm rounded-4 overflow-hidden" style="border: none; height: 100%;">
                <h4 class="text-center py-3" style="color: #FF6F61;">Our Location</h4>
                <div style="height: 100%; min-height: 450px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3650.4695761702216!2d90.394927!3d23.780806!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b86b9b1c9e01%3A0x1b4e8b1f7f4f1f8d!2sAhsanullah%20University%20of%20Science%20and%20Technology!5e0!3m2!1sen!2sbd!4v1757860000000!5m2!1sen!2sbd"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #fff5f0;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 111, 97, 0.25);
        border-color: #FF6F61;
    }

    h2, h4 {
        font-weight: 600;
    }

    
</style>
