@model Customer

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase fw-bold"
        style="letter-spacing:3px; font-family: 'Poppins', sans-serif; color:#ff6f61;">
        Customer Details
    </h2>
    <p class="text-center" style="color:#777; font-size:14px;">
        Meet one of our lovely shoppers 🛍️
    </p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4 border-0" style="background:#fffafc;">
            <div class="card-body text-center p-4">
                <!-- Customer Image -->
                <img src="~/customer_images/@Model.customer_image"
                     asp-append-version="true"
                     class="img-fluid rounded-circle shadow mb-3"
                     style="width:180px; height:180px; object-fit:cover;" />

                <h4 class="fw-bold" style="color:#ff6f61;">@Model.customer_name</h4>
                <p class="text-muted mb-4">🛒 Happy Shopper</p>

                <!-- Customer Details -->
                <ul class="list-group list-group-flush text-start">
                    <li class="list-group-item"><strong>🆔 ID:</strong> @Model.customer_id</li>
                    <li class="list-group-item"><strong>📞 Phone:</strong> @Model.customer_phone</li>
                    <li class="list-group-item"><strong>📧 Email:</strong> @Model.customer_email</li>
                    <li class="list-group-item"><strong>🔒 Password:</strong> @Model.customer_password</li>
                    <li class="list-group-item"><strong>👤 Gender:</strong> @Model.customer_gender</li>
                    <li class="list-group-item"><strong>🌍 Country:</strong> @Model.customer_country</li>
                    <li class="list-group-item"><strong>🏙️ City:</strong> @Model.customer_city</li>
                    <li class="list-group-item"><strong>🏡 Address:</strong> @Model.customer_address</li>
                    
                </ul>

                <!-- Action Buttons -->
                <div class="mt-4">
                    <a href="@Url.Action("updateCustomer", "Admin", new { id = Model.customer_id })"
                       class="btn btn-warning rounded-pill px-4 me-2">✏️ Update</a>
                    <a href="@Url.Action("deleteCustomer", "Admin", new { id = Model.customer_id })"
                       class="btn btn-danger rounded-pill px-4">🗑️ Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        background: transparent;
        border: none;
        padding: 10px 0;
        font-size: 15px;
        color: #444;
    }

        .list-group-item strong {
            color: #ff6f61;
        }

    .btn-warning {
        background-color: #ffd166;
        border: none;
        color: #333;
    }

        .btn-warning:hover {
            background-color: #e6b800;
            color: white;
        }

    .btn-danger {
        background-color: #ef476f;
        border: none;
    }

        .btn-danger:hover {
            background-color: #d62839;
        }
</style>
