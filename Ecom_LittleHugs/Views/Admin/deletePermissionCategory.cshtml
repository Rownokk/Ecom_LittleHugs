@model Category

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase fw-bold"
        style="letter-spacing:3px; font-family: 'Poppins', sans-serif; color:#d62839;">
        ⚠️ Are you sure you want to delete this category?
    </h2>
    <p class="text-center text-muted" style="font-size:15px;">
        This action <strong class="text-danger">cannot</strong> be undone.
    </p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4 border-0" style="background:#fff5f5;">
            <div class="card-body text-center p-4">

                <!-- Category Details -->
                <ul class="list-group list-group-flush text-start px-3">
                    <li class="list-group-item">
                        <strong>🆔 Category ID:</strong> <span class="text-dark">@Model.category_id</span>
                    </li>
                    <li class="list-group-item">
                        <strong>📦 Category Name:</strong> <span class="fw-semibold">@Model.category_name</span>
                    </li>
                </ul>

                <!-- Action Buttons -->
                <div class="mt-5 d-flex justify-content-center gap-3">
                    <!-- Cancel -->
                    <a href="@Url.Action("fetchCategory", "Admin")"
                       class="btn btn-secondary rounded-pill px-4 fw-semibold shadow-sm">
                        ❌ Cancel
                    </a>

                    <!-- Delete -->
                    <a href="@Url.Action("deleteCategory", "Admin", new { id = Model.category_id })"
                       class="btn btn-danger rounded-pill px-4 fw-semibold shadow-sm">
                        🗑️ Yes, Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        background: transparent;
        border: none;
        padding: 10px 0;
        font-size: 15px;
        color: #555;
    }

        .list-group-item strong {
            color: #d62839;
        }

    .btn-secondary {
        background-color: #adb5bd;
        border: none;
        color: white;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background-color: #6c757d;
            transform: translateY(-2px);
        }

    .btn-danger {
        background-color: #ef476f;
        border: none;
        transition: 0.3s;
    }

        .btn-danger:hover {
            background-color: #d62839;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }
</style>
