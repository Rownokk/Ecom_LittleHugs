@{
    Layout = "_Dashboard"; // Assuming you are using your dashboard layout
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center rounded-top-4">
                    <h3 class="mb-0 text-uppercase" style="letter-spacing:3px">Update Profile</h3>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control rounded-3" id="adminName" name="admin_name" placeholder="Enter Your Name">
                            <label for="adminName">Name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-3" id="adminEmail" name="admin_email" placeholder="Enter Your Email">
                            <label for="adminEmail">Email</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-3" id="adminPassword" name="admin_password" placeholder="Enter Your Password">
                            <label for="adminPassword">Password</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-3 shadow-sm">
                            Update Profile
                        </button>
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: #fff4f6; /* soft pink background */
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background: #fff8f7; /* soft creamy card background */
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(231, 84, 128, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(231, 84, 128, 0.2);
        }

    .card-header {
        background: linear-gradient(135deg, #ffb3c1, #ffcce0); /* soft pink gradient */
        color: #fff;
        font-weight: 600;
        letter-spacing: 2px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .form-control {
        border-radius: 15px;
        border: 1px solid #f8c8dc;
        background-color: #fff0f4;
        padding: 1rem 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #e75480;
            box-shadow: 0 0 8px rgba(231, 84, 128, 0.2);
            background-color: #fff;
        }

    label {
        color: #e75480;
        font-weight: 500;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff9abf, #ffcee6);
        border: none;
        color: #fff;
        font-weight: 600;
        padding: 0.8rem;
        font-size: 1rem;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #e75480, #ff9abf);
            box-shadow: 0 6px 15px rgba(231, 84, 128, 0.3);
        }

    .card-footer {
        background: #fff4f6;
        border-top: none;
        font-size: 0.85rem;
        color: #d45d85;
    }

    /* Floating label tweaks */
    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #e75480;
        transform: translateY(-1.5rem) scale(0.9);
    }

    /* Optional: soft rounded container */
    .container.py-5 {
        padding-top: 6rem !important;
        padding-bottom: 6rem !important;
    }
</style>
