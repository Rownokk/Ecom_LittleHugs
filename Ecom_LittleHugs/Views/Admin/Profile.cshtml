@{
    Layout = "_Dashboard"; // Your dashboard layout
}
@model Ecom_LittleHugs.Models.Admin

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center rounded-top-4">
                    <h3 class="mb-0 text-uppercase" style="letter-spacing:3px">Update Profile</h3>
                </div>

                <div class="card-body p-4">
                    <!-- Profile Update Form -->
                    <form method="post" asp-action="Profile" asp-controller="Admin">
                        <input type="hidden" name="admin_id" value="@Model.admin_id" />

                        <div class="form-floating mb-4">
                            <input type="text" class="form-control rounded-3" value="@Model.admin_name" id="adminName" name="admin_name" placeholder="Enter Your Name">
                            <label for="adminName">Name</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="email" class="form-control rounded-3" value="@Model.admin_email" id="adminEmail" name="admin_email" placeholder="Enter Your Email">
                            <label for="adminEmail">Email</label>
                        </div>

                        <div class="form-floating mb-4">
                            <!-- For security, do not pre-fill password -->
                            <input type="password" class="form-control rounded-3" id="adminPassword" name="admin_password" placeholder="Enter New Password">
                            <label for="adminPassword">Password</label>
                        </div>

                        <input type="hidden" name="admin_image" value="@Model.admin_image" />

                        <button type="submit" class="btn btn-primary w-100 rounded-3 shadow-sm">
                            Update Profile
                        </button>
                    </form>

                    <hr />

                    <!-- Profile Image Upload -->
                    <form method="post" asp-action="ChangeProfileImage" enctype="multipart/form-data">
                        <input type="hidden" name="admin_id" value="@Model.admin_id" />

                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.admin_image))
                            {
                                <img src="~/admin_image/@Model.admin_image" asp-append-version="true" style="width:250px;height:250px;object-fit:cover;border-radius:50%;border:3px solid #e75480" alt="Profile Image" />
                            }
                            else
                            {
                                <img src="~/admin_image/default.png" style="width:250px;height:250px;object-fit:cover;border-radius:50%;border:3px solid #e75480" alt="Default Image" />
                            }
                        </div>

                        <input type="file" name="admin_image" class="form-control my-3" />

                        <input type="submit" value="Change Profile Image" class="btn btn-primary w-100 rounded-3 shadow-sm" />
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: #fff4f6; /* soft pink background */
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background: #fff8f7;
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(231, 84, 128, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(231, 84, 128, 0.2);
        }

    .card-header {
        background: linear-gradient(135deg, #ffb3c1, #ffcce0);
        color: #fff;
        font-weight: 600;
        letter-spacing: 2px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .form-control {
        border-radius: 15px;
        border: 1px solid #f8c8dc;
        background-color: #fff0f4;
        padding: 1rem 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #e75480;
            box-shadow: 0 0 8px rgba(231, 84, 128, 0.2);
            background-color: #fff;
        }

    label {
        color: #e75480;
        font-weight: 500;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff9abf, #ffcee6);
        border: none;
        color: #fff;
        font-weight: 600;
        padding: 0.8rem;
        font-size: 1rem;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #e75480, #ff9abf);
            box-shadow: 0 6px 15px rgba(231, 84, 128, 0.3);
        }

    .card-footer {
        background: #fff4f6;
        border-top: none;
        font-size: 0.85rem;
        color: #d45d85;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #e75480;
        transform: translateY(-1.5rem) scale(0.9);
    }

    .container.py-5 {
        padding-top: 6rem !important;
        padding-bottom: 6rem !important;
    }
</style>
