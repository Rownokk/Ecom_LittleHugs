@{
    Layout = "_Dashboard"; // Your dashboard layout
}
@model Ecom_LittleHugs.Models.Product

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center rounded-top-4">
                    <h3 class="mb-0 text-uppercase" style="letter-spacing:3px">Update Product</h3>
                </div>
                <div class="card-body p-4">

                    <!-- Product Update Form -->
                    <form method="post" asp-action="updateProduct" asp-controller="Admin">

                        <!-- Product ID -->
                        <div class="form-floating mb-4">
                            <input type="text"
                                   class="form-control rounded-3"
                                   id="productId"
                                   name="product_id"
                                   value="@Model.product_id"
                                   placeholder="Enter Product ID"
                                   readonly />
                            <label for="productId">Product ID</label>
                        </div>

                        <!-- SPACE BETWEEN ID AND NAME -->
                        <div class="mb-3"></div>

                        <!-- Product Name -->
                        <div class="form-floating mb-4">
                            <input type="text"
                                   class="form-control rounded-3"
                                   id="productName"
                                   name="product_name"
                                   value="@Model.product_name"
                                   placeholder="Enter Product Name" />
                            <label for="productName">Product Name</label>
                        </div>

                        <!-- Product Price -->
                        <div class="form-floating mb-4">
                            <input type="text"
                                   class="form-control rounded-3"
                                   id="productPrice"
                                   name="product_price"
                                   value="@Model.product_price"
                                   placeholder="Enter Product Price" />
                            <label for="productPrice">Product Price</label>
                        </div>

                        <!-- Product Description -->
                        <div class="form-floating mb-4">
                            <input type="text"
                                   class="form-control rounded-3"
                                   id="productDescription"
                                   name="product_description"
                                   value="@Model.product_description"
                                   placeholder="Enter Product Description" />
                            <label for="productDescription">Product Description</label>
                        </div>
                        @Html.Partial("CategoryDropdown", ViewData["category"])
                   

                        <!-- Hidden Product Image -->
                        <input type="hidden" name="product_image" value="@Model.product_image" />

                        <!-- Submit Button (no extra space above) -->
                        <button type="submit" class="btn btn-primary w-100 rounded-3 shadow-sm">
                            Update Product
                        </button>
                    </form>

                    <hr />

                    <!-- Product Image Upload -->
                    <form method="post" asp-action="ChangeProductImage" enctype="multipart/form-data">
                        <input type="hidden" name="product_id" value="@Model.product_id" />
                        <input type="hidden" name="product_name" value="@Model.product_name" />
                        <input type="hidden" name="product_price" value="@Model.product_price" />
                        <input type="hidden" name="product_description" value="@Model.product_description" />
                        <input type="hidden" name="cat_id" value="@Model.cat_id" />

                        <div class="mb-4">
                            <label for="productImage" class="form-label">Choose New Product Image</label>
                            <input type="file" id="productImage" name="product_image" class="form-control" />
                        </div>

                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.product_image))
                            {
                                <img src="~/product_images/@Model.product_image" asp-append-version="true"
                                     style="width:250px;height:250px;object-fit:cover;border-radius:50%;border:3px solid #e75480"
                                     alt="Product Image" />
                            }
                            else
                            {
                                <img src="~/product_images/default.png"
                                     style="width:250px;height:250px;object-fit:cover;border-radius:50%;border:3px solid #e75480"
                                     alt="Default Image" />
                            }
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-3 shadow-sm">
                            Change Product Image
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center text-muted small">
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background: #fff4f6; /* soft pink background */
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background: #fff8f7;
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(231, 84, 128, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(231, 84, 128, 0.2);
        }

    .card-header {
        background: linear-gradient(135deg, #ffb3c1, #ffcce0);
        color: #fff;
        font-weight: 600;
        letter-spacing: 2px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .form-control {
        border-radius: 15px;
        border: 1px solid #f8c8dc;
        background-color: #fff0f4;
        padding: 1rem 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #e75480;
            box-shadow: 0 0 8px rgba(231, 84, 128, 0.2);
            background-color: #fff;
        }

    label {
        color: #e75480;
        font-weight: 500;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff9abf, #ffcee6);
        border: none;
        color: #fff;
        font-weight: 600;
        padding: 0.8rem;
        font-size: 1rem;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #e75480, #ff9abf);
            box-shadow: 0 6px 15px rgba(231, 84, 128, 0.3);
        }

    .card-footer {
        background: #fff4f6;
        border-top: none;
        font-size: 0.85rem;
        color: #d45d85;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #e75480;
        transform: translateY(-1.5rem) scale(0.9);
    }

    .container.py-5 {
        padding-top: 6rem !important;
        padding-bottom: 6rem !important;
    }
</style>
