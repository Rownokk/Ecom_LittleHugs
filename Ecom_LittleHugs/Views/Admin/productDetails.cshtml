@model Product

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase fw-bold"
        style="letter-spacing:3px; font-family: 'Poppins', sans-serif; color:#ff6f61;">
        Product Details
    </h2>
    <p class="text-center" style="color:#777; font-size:14px;">
        Meet one of our lovely shoppers 🛍️
    </p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4 border-0" style="background:#fffafc;">
            <div class="card-body text-center p-4">
                <!-- Product Image -->
                <img src="~/product_images/@Model.product_image"
                     class="img-fluid rounded-circle shadow mb-3"
                     style="width:180px; height:180px; object-fit:cover;"
                     alt="@Model.product_name" />


                <h4 class="fw-bold" style="color:#ff6f61;">@Model.product_name</h4>
                <p class="text-muted mb-4">🛒 Happy Shopper</p>

                <!-- Customer Details -->
                <ul class="list-group list-group-flush text-start">
                    <li class="list-group-item"><strong> Id:</strong> @Model.product_id</li>
                    <li class="list-group-item"><strong> Name:</strong> @Model.product_name</li>
                    <li class="list-group-item"><strong> Price:</strong> @Model.product_price</li>
                    <li class="list-group-item"><strong> Description:</strong> @Model.product_description</li>
                    <li class="list-group-item"><strong> Category:</strong> @Model.Category.category_name</li>
                   
                    

                </ul>

                <!-- Action Buttons -->
               
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        background: transparent;
        border: none;
        padding: 10px 0;
        font-size: 15px;
        color: #444;
    }

        .list-group-item strong {
            color: #ff6f61;
        }

    .btn-warning {
        background-color: #ffd166;
        border: none;
        color: #333;
    }

        .btn-warning:hover {
            background-color: #e6b800;
            color: white;
        }

    .btn-danger {
        background-color: #ef476f;
        border: none;
    }

        .btn-danger:hover {
            background-color: #d62839;
        }
</style>


