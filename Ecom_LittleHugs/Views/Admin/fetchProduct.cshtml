@model List<Product>

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase fw-bold"
        style="letter-spacing:3px; font-family: 'Poppins', sans-serif; color:#ff6f61;">
        All Products
    </h2>
    <p class="text-center text-muted" style="font-size:14px;">
        A lovely list of our cute product categories 🛍️
    </p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <!-- Add Category Button -->
        <div class="d-flex justify-content-end mb-3">
            <a href="@Url.Action("addCategory", "Admin")" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                ➕ Add New Category
            </a>
        </div>

        <div class="table-responsive shadow-lg rounded-4 overflow-hidden">
            <table class="table align-middle text-center mb-0" style="background: #fffafc;">
                <thead style="background: linear-gradient(90deg, #ff9a9e, #fad0c4); color: #fff; font-weight:600; font-size:15px;">
                    <tr>
                        
                        <th>📦 Product Name</th>
                        <th>📦 Product Price</th>
                        <th>📦 Product Image</th>
                        <th>⚙️ Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in Model)
                    {
                      <tr>
                          <td>@prod.product_name</td>
                          <td>@prod.product_price</td>
                          <td>@prod.product_image</td>
                            <td>
                                <a href="@Url.Action("productDetails", "Admin", new { id = prod.product_id })" class="btn btn-sm btn-details me-1">
                                    Details
                                </a>
                                <a href="@Url.Action("updateProduct", "Admin", new { id = prod.product_id })" class="btn btn-sm btn-update me-1">
                                    Update
                                </a>
                                <a href="@Url.Action("deletePermissionProduct", "Admin", new { id = prod.product_id })" class="btn btn-sm btn-delete">
                                    Delete
                                </a>
                            </td>
                      </tr>  
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Table Rows */
    .category-row {
        transition: all 0.3s ease;
        background: #fffafc;
    }

        .category-row:hover {
            background: #ffeef2;
            transform: scale(1.02);
            box-shadow: 0 4px 15px rgba(255,111,97,0.2);
        }

    td {
        font-size: 14px;
        color: #444;
        padding: 12px 10px;
    }

    th {
        font-weight: 600;
        font-size: 15px;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    /* Buttons */
    .btn-update {
        background-color: #ffd166;
        color: #333;
        border-radius: 25px;
        font-size: 13px;
        padding: 4px 12px;
        transition: 0.3s;
        box-shadow: 0 2px 6px rgba(255,209,100,0.3);
    }

        .btn-update:hover {
            background-color: #e6b800;
            color: white;
        }

    .btn-delete {
        background-color: #ef476f;
        color: white;
        border-radius: 25px;
        font-size: 13px;
        padding: 4px 12px;
        transition: 0.3s;
        box-shadow: 0 2px 6px rgba(239,71,111,0.3);
    }

        .btn-delete:hover {
            background-color: #d62839;
        }

    .btn-primary {
        background-color: #6ec1e4;
        border: none;
        color: white;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #4aa3c7;
        }

    /* Table rounded corners */
    .table-responsive {
        border-radius: 20px;
    }
</style>
