        /* Remove any background images */
        body, .page-wrapper, .wrap-container {
            background-image: none !important;
            background-color: #fff;
        }

        /* Simplify the header navigation */
        .main-nav .menu > li > a {
            padding: 1.5rem 1.2rem;
            font-weight: 500;
            color: #333;
        }

        .main-nav .menu > li.active > a,
        .main-nav .menu > li:hover > a {
            color: #e91e63;
        }

        /* Remove megamenus and dropdowns for simplified navigation */
        .megamenu, .sf-arrows ul {
            display: none !important;
        }

        /* Back to Top Button Styles */
        .back-to-top {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #ff9cbd;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(233, 30, 99, 0.3);
            z-index: 999;
            transition: all 0.3s ease;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
        }

            .back-to-top.show {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

            .back-to-top:hover {
                background: #e91e63;
                transform: translateY(-5px);
            }

            .back-to-top i {
                font-size: 20px;
            }

        /* Chat Bot Styles */
        .chat-bot-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .chat-bot-button {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #ff9cbd, #e91e63);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(233, 30, 99, 0.4);
            transition: all 0.3s ease;
        }

            .chat-bot-button:hover {
                transform: scale(1.1);
            }

            .chat-bot-button i {
                font-size: 24px;
            }

        .chat-bot-window {
            position: absolute;
            bottom: 70px;
            right: 0;
            width: 320px;
            height: 400px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
            display: none;
            flex-direction: column;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .chat-bot-window.active {
                display: flex;
            }

        .chat-header {
            background: linear-gradient(135deg, #ff9cbd, #e91e63);
            color: white;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .chat-header h3 {
                margin: 0;
                font-size: 18px;
                font-weight: 600;
            }

        .close-chat {
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            font-size: 20px;
        }

        .chat-messages {
            flex: 1;
            padding: 15px;
            overflow-y: auto;
            background: #f9f9f9;
            display: flex;
            flex-direction: column;
        }

        .message {
            margin-bottom: 15px;
            display: flex;
            max-width: 100%;
            animation: fadeIn 0.3s ease;
        }

        

        .bot-message {
            justify-content: flex-start;
        }

        .user-message {
            justify-content: flex-end;
        }

        .message-content {
            max-width: 80%;
            padding: 10px 15px;
            border-radius: 18px;
            font-size: 14px;
            line-height: 1.4;
        }

        .bot-message .message-content {
            background: white;
            color: #333;
            border-bottom-left-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .user-message .message-content {
            background: #e91e63;
            color: white;
            border-bottom-right-radius: 5px;
        }

        .chat-options {
            padding: 15px;
            background: white;
            border-top: 1px solid #eee;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .option-button {
            display: block;
            width: 100%;
            padding: 10px 15px;
            background: #f8f8f8;
            border: 1px solid #eee;
            border-radius: 20px;
            text-align: left;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 14px;
            color: #555;
        }

            .option-button:hover {
                background: #ffebf1;
                border-color: #ff9cbd;
            }

        .quick-options {
