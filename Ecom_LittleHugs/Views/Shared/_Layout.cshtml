        // Back to Top functionality
        $(document).ready(function() {
            // Back to Top button
            var backToTop = $('.back-to-top');

            // Toggle visibility of back to top button
            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) {
                    backToTop.addClass('show');
                } else {
                    backToTop.removeClass('show');
                }
            });

            // Smooth scroll to top
            backToTop.click(function(e) {
                e.preventDefault();
                $('html, body').animate({scrollTop: 0}, 800);
            });

            // Chat bot functionality
            var chatButton = $('.chat-bot-button');
            var chatWindow = $('.chat-bot-window');
            var closeChat = $('.close-chat');
            var chatMessages = $('.chat-messages');
            var optionButtons = $('.option-button');
            var quickOptions = $('.quick-option');
            var chatInputArea = $('.chat-input-area');
            var chatInput = $('.chat-input input');
            var chatSend = $('.chat-input button');

            // Toggle chat window
            chatButton.click(function() {
                chatWindow.toggleClass('active');
            });

            // Close chat window
            closeChat.click(function() {
                chatWindow.removeClass('active');
            });

            // Predefined answers for questions
            var answers = {
                "What are your shipping options?": "We offer standard shipping (3-5 business days) for $4.99, express shipping (2-3 business days) for $9.99, and free shipping for orders over $50! 🚚",
                "How can I track my order?": "Once your order ships, we'll send a confirmation email with a tracking number. You can also track your order from your account dashboard. 📦",
                "What is your return policy?": "We offer a 30-day return policy for unused items in original packaging. Returns are free for store credit or exchange! 🔄",
                "Do you have baby care products?": "Yes! We have a wide range of baby care products including organic skincare, diapers, baby shampoos, and more. Check our 'Baby Care' category! 👶",
                "Store hours?": "We're open Monday to Saturday from 9AM to 8PM, and Sundays from 10AM to 6PM. 🕒",
                "Payment methods?": "We accept all major credit cards, PayPal, Apple Pay, and Google Pay. 💳",
                "Gift cards?": "Yes! We offer digital and physical gift cards in various denominations. Perfect for baby showers! 🎁",
                "New arrivals?": "New products arrive every week! Check our 'New Arrivals' section to see the latest additions to our collection. 🆕"
            };

            // Function to add message to chat
            function addMessage(message, isUser) {
                var messageClass = isUser ? 'user-message' : 'bot-message';
                var messageHTML = '<div class="message ' + messageClass + '">' +
                    '<div class="message-content">' + message + '</div>' +
                    '</div>';

                chatMessages.append(messageHTML);
                chatMessages.scrollTop(chatMessages[0].scrollHeight);
            }

            // Function to show typing indicator
            function showTypingIndicator() {
                var typingHTML = '<div class="typing-indicator" id="typing-indicator">' +
                    'LittleHugs Assistant is typing' +
                    '<div class="typing-dots">' +
                    '<div class="typing-dot"></div>' +
                    '<div class="typing-dot"></div>' +
                    '<div class="typing-dot"></div>' +
                    '</div>' +
                    '</div>';

                chatMessages.append(typingHTML);
                chatMessages.scrollTop(chatMessages[0].scrollHeight);

                return $('#typing-indicator');
            }

            // Handle option button clicks
            function handleQuestion(question) {
                // Add user question to chat
                addMessage(question, true);

                // Remove options after question is asked
                $('.chat-options').slideUp(1000);

                // Show typing indicator
                var typingIndicator = showTypingIndicator();

                // Get answer after a short delay
                setTimeout(function() {
                    var answer = answers[question] || "I'm sorry, I don't have information about that yet. Please contact our customer service for assistance.";

                    // Remove typing indicator
                    typingIndicator.remove();

                    // Add bot response
                    addMessage(answer, false);

                    // Show follow-up options after a delay
                    setTimeout(function() {
                        $('.chat-options').slideDown(2500);
                    }, 1000);
                }, 1500);
            }

            // Set up event handlers
            optionButtons.click(function() {
                var question = $(this).data('question');
                handleQuestion(question);
            });

            quickOptions.click(function() {
                var question = $(this).data('question');
                handleQuestion(question);
            });

            // Handle send button click
            chatSend.click(function() {
                var message = chatInput.val().trim();
                if (message !== '') {
                    addMessage(message, true);
                    chatInput.val('');

                    // Show typing indicator
                    var typingIndicator = showTypingIndicator();

                    // Bot response after delay
                    setTimeout(function() {
                        typingIndicator.remove();
                        addMessage("I'm still learning to respond to custom messages. Please select one of the options above for immediate help. 💖", false);
                    }, 1500);
                }
            });

            // Allow pressing Enter to send message
            chatInput.keypress(function(e) {
                if (e.which === 250) { 
                    chatSend.click();
                    return false;
                }
            });
        });
    </script>

